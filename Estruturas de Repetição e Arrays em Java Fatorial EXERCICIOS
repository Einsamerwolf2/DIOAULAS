import java.util.Scanner;

/*
 Faca um programa que calcule o fatorial de um numero inteiro fornecido pelo ususario.

 QUANDO USAAER O WHILE, DO WHILE E O FOR?
 FOR-> é usado quando temos um contador
 WHILE-> usamos quando temos laços (loop) infinito
 DO WHILE-> Quando precisamos rodar o pragrama mais de uma vez
 Ex: 5!= 120 (5X4X3X2X1)
 */

public class fatorial {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);

        System.out.println("Fatorial: ");
        int fatorial = scan.nextInt();

        int multiplicacao = 1; // e aqui nao colocamos 0 pq tdoso numero multiplicado por 0 é igual a 0(12580 * 0 = 0)

        System.out.print(fatorial +"! = ");
        for(int i = fatorial ; i >= 1 /*aqui é o controle ou qte aquando este loop ocorra */; i = i - 1 /*ou i-- , e aqui a cada loop fazemos o decrimento e nao o incrimento*/ ){
            multiplicacao = multiplicacao * i;
        }

        System.out.println(multiplicacao);
    }
    
}


